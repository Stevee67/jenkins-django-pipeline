node('docker') {
    stage 'Checkout'
        checkout scm
    stage 'Build & UnitTest'
        sh "ls -l"
        sh "docker build -t admin-panel:B${BUILD_NUMBER} -f admin-panel/Dockerfile ."
        sh "docker-compose run --rm admin-panel:B${BUILD_NUMBER} bash -c 'cd admin_panel && py.test -v'"
    stage 'Cleanup'
        sh "docker rmi admin-panel:B${BUILD_NUMBER}"
}