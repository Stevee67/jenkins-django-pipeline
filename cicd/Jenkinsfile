node('docker') {
    stage 'Checkout'
        checkout scm
    stage 'Build & UnitTest'
        sh "docker build -t admin-panel:B${BUILD_NUMBER} -f Dockerfile ."
        sh "docker-compose run --rm admin-panel bash -c 'cd admin_panel && py.test -v'"
    stage 'Cleanup'
        sh "docker rmi admin-panel:B${BUILD_NUMBER}"
}